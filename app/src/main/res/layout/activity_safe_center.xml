<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_tips2"
            android:text="身份"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_safe_center"
            android:orientation="vertical">
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/rl_personal_anthen"
                android:background="@drawable/bg_safe_center_click"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/safe_center_type_text"
                    android:text="@string/really_name"/>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="right"
                        android:layout_marginRight="20dp"
                        android:id="@+id/tv_personal_center_no_anthen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_tips2"
                        android:textSize="@dimen/safe_center_text"
                        android:text="@string/no_anthen"/>
                    <ImageView
                        android:id="@+id/name_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/open"
                        android:layout_marginRight="20dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/rl_personal_bankcardbinding"
                android:background="@drawable/bg_safe_center_click"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/safe_center_type_text"
                    android:text="@string/really_bankcard"/>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="right"
                        android:layout_marginRight="20dp"
                        android:id="@+id/tv_personal_center_no_binding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_tips2"
                        android:textSize="@dimen/safe_center_text"
                        android:text="@string/no_binding"/>
                    <ImageView
                        android:id="@+id/bank_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/open"
                        android:layout_marginRight="20dp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/main_tips2"
            android:text="安全"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_safe_center"
            android:orientation="vertical">
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:background="@drawable/bg_safe_center_click"
                android:id="@+id/rl_personal_loginpwd_change"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/safe_center_type_text"
                    android:text="@string/login_pwd_change"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/open"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>

            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:background="@drawable/bg_safe_center_click"
                android:id="@+id/rl_personal_sodoko_unlock_change"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/safe_center_type_text"
                    android:text="@string/sodoko_unlock"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/open"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:background="@drawable/bg_safe_center_click"
                android:id="@+id/Reset_Passwrod"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/safe_center_type_text"
                    android:text="@string/Reset_Passwrod"/>
                <TextView
                    android:id="@+id/is_pay_passwrod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/main_tips2"
                    android:text="@string/Reset_passwrod_wei"
                    android:textSize="@dimen/text_size_12sp"
                    android:gravity="right"
                    android:layout_marginRight="40dp"
                    />
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/open"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
