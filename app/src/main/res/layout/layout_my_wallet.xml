<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/bg_main"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cgtz.com.cgwallet.widget.MScrollView
        android:id="@+id/wallet_scrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@mipmap/bg_my_wallet_top"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_year_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="@string/my_wallet_today_earning_hint"
                        android:textColor="@color/my_wallet_today_earning_hint"
                        android:textSize="@dimen/my_wallet_today_earning_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/wallet_earnings"
                        android:text="3.68"
                        android:textSize="@dimen/my_wallet_figure_size"
                        android:textColor="@color/center_layout_normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_wallet_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <LinearLayout
                    android:id="@+id/wallet_assets_layout"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="钱包资产（元）"
                            android:textColor="@color/my_wallet_earning_text"
                            android:textSize="@dimen/my_wallet_earning_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/wallet_my_assets"
                            android:layout_margin="5dp"
                            android:text="0.00"
                            android:textColor="@color/my_wallet_earning_num_text"
                            android:textSize="@dimen/my_wallet_earning_num_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_click_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wallet_accumulative_layout"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="累计收益（元）"
                            android:textColor="@color/my_wallet_earning_text"
                            android:textSize="@dimen/my_wallet_earning_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/wallet_accumulative_earnings"
                            android:layout_margin="5dp"
                            android:text="0.00"
                            android:textColor="@color/my_wallet_earning_num_text"
                            android:textSize="@dimen/my_wallet_earning_num_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_click_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/bg_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
            <LinearLayout
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:id="@+id/layout_auther"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_wallet_auther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="实名认证"
                        android:textColor="@color/my_wallet_earning_text"
                        android:textSize="@dimen/my_wallet_another_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/wallet_identity"
                        android:layout_margin="5dp"
                        android:text="3302****0920"
                        android:textColor="@color/my_wallet_earning_num_text"
                        android:textSize="@dimen/my_wallet_earning_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/bg_my_wallet"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/layout_bank"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_wallet_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="银行卡"
                        android:textColor="@color/my_wallet_earning_text"
                        android:textSize="@dimen/my_wallet_another_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/wallet_bank_card"
                        android:layout_margin="5dp"
                        android:text="**** **** **** ***2568"
                        android:textColor="@color/my_wallet_earning_num_text"
                        android:textSize="@dimen/my_wallet_earning_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/bg_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:id="@+id/layout_draw"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_wallet_draw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="我要取钱"
                        android:textColor="@color/my_wallet_earning_text"
                        android:textSize="@dimen/my_wallet_another_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/bg_my_wallet"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/layout_save"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_wallet_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="我要存钱"
                        android:textColor="@color/my_wallet_earning_text"
                        android:textSize="@dimen/my_wallet_another_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="@color/bg_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:id="@+id/layout_draw_record"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_wallet_draw_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="取钱记录"
                        android:textColor="@color/my_wallet_earning_text"
                        android:textSize="@dimen/my_wallet_another_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/bg_my_wallet"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:id="@+id/layout_save_record"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/icon_wallet_save_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="存钱记录"
                        android:textColor="@color/my_wallet_earning_text"
                        android:textSize="@dimen/my_wallet_another_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </cgtz.com.cgwallet.widget.MScrollView>
</LinearLayout>