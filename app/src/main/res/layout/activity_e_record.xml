<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=""
    >
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全部记录"
            android:textColor="@color/remond_take_turns_text1"
            android:textSize="16sp"
            android:background="@color/bg_projectlist_more"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/porp_line"
            />
        <Button
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="转入记录"
            android:textColor="@color/remond_take_turns_text1"
            android:textSize="16sp"
            android:background="@color/bg_projectlist_more"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/porp_line"
            />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="转出记录"
            android:textColor="@color/remond_take_turns_text1"
            android:textSize="16sp"
            android:background="@color/bg_projectlist_more"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"
        android:orientation="vertical">
    <!-- VIewPager 主要是加载内容的 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <include layout="@layout/layout_save_or_draw_money"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="58dp"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_alignBottom="@id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/green_sliders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/green_sliders"

            />
    </RelativeLayout>
</RelativeLayout>