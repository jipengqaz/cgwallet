                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/wallet_assets_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/wallet_my_assets"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="0.00"
                                    android:textColor="@color/main_bg"
                                    android:textSize="@dimen/my_wallet_earning_num_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/my_wallet_text1"
                                    android:textColor="@color/darker_gray"
                                    android:textSize="@dimen/my_wallet_earning_size" />
                            </LinearLayout>

                            <View
                                android:id="@+id/vertical_view"
                                android:layout_width="0.5dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
