                                <View
                                    android:id="@+id/main_view"
                                    android:layout_width="112dp"
                                    android:layout_height="0.5dp"
                                    android:background="@color/lighter_gray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
