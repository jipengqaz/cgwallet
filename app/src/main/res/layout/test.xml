                                    android:text="0.00"
                                    android:textColor="@color/main_bg"
                                    android:textSize="@dimen/my_wallet_earning_num_size" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
