<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box"
    android:background="@color/bg_regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_no_phone"
                android:src="@mipmap/logo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_login_parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="2dp"
                    android:id="@+id/phone_layout"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_login_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <EditText
                        android:id="@+id/login_edit_phone"
                        style="@style/login_edit_text_hint"
                        android:maxLength="11"
                        android:numeric="integer"
                        android:gravity="center_vertical"
                        android:textCursorDrawable="@null"
                        android:drawableLeft="@mipmap/icon_login_phone"
                        android:drawablePadding="10dp"
                        android:paddingLeft="@dimen/draw_padding"
                        android:hint="@string/login_edit_hint_text"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="@dimen/height_login_edit" />
                    <ImageView
                        android:id="@+id/empty_change_mobile"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_change_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!--<TextView-->
                    <!--android:id="@+id/show_edits_mobile"-->
                    <!--android:visibility="gone"-->
                    <!--android:gravity="center"-->
                    <!--android:background="@null"-->
                    <!--android:textColor="@color/hint_show_edits_mobile"-->
                    <!--android:textSize="@dimen/hint_show_edits_mobile"-->
                    <!--android:layout_width="match_parent"-->
                    android:layout_height="@dimen/height_login_edit" />
                <View
                    android:background="@color/bg_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_login_edit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <EditText
                        android:id="@+id/login_edit_pwd"
                        style="@style/login_edit_text_hint"
                        android:password="true"
                        android:gravity="center_vertical"
                        android:textCursorDrawable="@null"
                        android:drawableLeft="@mipmap/icon_login_pwd"
                        android:drawablePadding="10dp"
                        android:paddingLeft="@dimen/draw_padding"
                        android:hint="@string/login_edit_pwd_hint_text"
                        android:lines="1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_login_edit" />
                    <ImageView
                        android:id="@+id/empty"
                        android:visibility="gone"
                        android:layout_marginRight="1dp"
                        android:layout_marginLeft="1dp"
                        android:src="@mipmap/icon_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_show_pwd"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/icon_regist_no_show_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!--<TextView-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginLeft="19dp"-->
                    <!--android:text="@string/hint_can_login"-->
                    <!--android:textSize="@dimen/text_size_12sp"-->
                    <!--android:textColor="@color/login_hint_text"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
            </LinearLayout>
            <Button
                android:id="@+id/login_button_finish"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_login_button"
                android:text="@string/login_button_next"
                android:textSize="@dimen/login_btn_text"
                android:textColor="@color/login_btn_can_click_text"
                android:layout_width="match_parent"
                android:layout_height="42dp" />
            <TextView
                android:id="@+id/tv_forget_pwd"
                android:text="@string/hint_forget_pwd"
                style="@style/login_activity_forget_text"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_login_bottom">
        <TextView
            android:id="@+id/tv_regist_account"
            android:text="@string/hint_regist_account"
            style="@style/login_activity_regist_text"/>
    </LinearLayout>
</RelativeLayout>
