    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/three_white_one"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:src="@mipmap/ico_gouwu" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_one"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_two_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pament_two" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_two_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_fuwu" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_two"
            android:orientation="horizontal">

            <LinearLayout
                android:paddingLeft="@dimen/margin_padding_45dp"
                android:id="@+id/ll_three_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_20dp"
                    android:src="@drawable/pament_one" />
            </LinearLayout>

            <LinearLayout
                android:paddingRight="@dimen/margin_padding_45dp"
                android:id="@+id/ll_three_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_20dp"
                    android:src="@mipmap/ico_waichu" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/tv_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_0.5dp"
        android:background="@color/gray" />

    <FrameLayout
        android:id="@+id/fl_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/three_white">

        <TextView
            android:id="@+id/tv_gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂无账单记录"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_20sp" />

        <LinearLayout
            android:id="@+id/wallet_accumulative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_5dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_three_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

           <!-- <TextView
                android:id="@+id/tv_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_5dp"
                android:gravity="center_horizontal"
                android:text="点击查看更多"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_20sp" />-->
        </LinearLayout>
        <TextView
            android:id="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:text="点击查看更多"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_20sp"
            android:layout_marginBottom="5dp"/>
    </FrameLayout>

    <!--        </cgtz.com.cgwallet.view.PullableLinearLayout>
