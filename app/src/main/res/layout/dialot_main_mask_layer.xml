<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_wallet_before"
        android:padding="10dp"
        android:layout_above="@+id/start_money"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_banner"
            android:drawableLeft="@mipmap/icon_assets_safe"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="@string/banner_text"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/money_tv_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/btn_1yuan"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/btn_5safe"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/icon_save"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/understand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text="点击了解草根钱包"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/action_bar_bg"
            />
    </LinearLayout>
    <Button
        android:id="@+id/start_money"
        android:text="@string/dialog_main_btn_text"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/button_text_not_enabled"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:editable="false"
        android:background="@drawable/bg_button_preed"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />
    </RelativeLayout>
</LinearLayout>