<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:background="#e9e9e9"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_conter_top"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_top_title"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/main_conter_layout"
        android:layout_below="@+id/main_conter_top"
        android:layout_above="@+id/transfer_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:layout_centerInParent="true"
            android:id="@+id/main_conter_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/main_conter_layout_border_left"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_conter_layout_border_right"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_width="10dp"
            android:layout_height="match_parent">

        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/layout_bottom_transfer"/>
</RelativeLayout>