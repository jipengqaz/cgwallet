<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_bg"
    android:layout_width="0dp"
    android:layout_height="0dp">
    <ImageView
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:id="@+id/show_left_button"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/icon_menu"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/my_wallet_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_main_btn_left_back_on"
            android:gravity="center"
            android:text="我的钱包"
            android:textColor="@color/main_bg"
            />
        <TextView
            android:id="@+id/cg_wallet_button"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_main_btn_right_back_off"
            android:gravity="center"
            android:text="草根钱包"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <!--<ImageView-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@mipmap/bg_slogan"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    <ImageView
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:id="@+id/show_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_share"
        />
</RelativeLayout>