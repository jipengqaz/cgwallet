<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:id="@+id/box"
    android:background="@color/main_bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout
    android:id="@+id/withdraw_box"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_edit_2">
        <View
            android:background="@color/bg_line"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <ImageView
            android:id="@+id/bank_icon"
            android:layout_centerVertical="true"
            tools:src ="@drawable/bank_1"
            android:layout_marginLeft="@dimen/save_moeny_marign_left"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bank_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bank_icon"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/abc_search_url_text_pressed"
            />
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_money_text"
            android:layout_toRightOf="@id/bank_icon"
            android:layout_alignBottom="@id/bank_icon"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/money_tv_hint_text"
            />
        <TextView
            android:id="@+id/bank_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/withdraw_money_text"
            android:layout_toRightOf="@id/text"
            android:layout_alignBottom="@id/text"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/money_tv_hint_text"
            />
        <View
            android:background="@color/bg_line"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/save_moeny_marign_left"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_money_text_1"
            android:textColor="@color/money_tv_hint_text"
            android:textSize="@dimen/text_size_12sp"
            />
        <TextView
            android:id="@+id/available_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2338 "
            android:textSize="@dimen/save_moeny_main_text"
            android:textColor="@color/money_asset_text"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmb"
            android:textColor="@color/money_tv_hint_text"
            android:textSize="@dimen/text_size_12sp"
            />
    </LinearLayout>
        <View
            android:layout_marginTop="30dp"
            android:background="@color/bg_line"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edit"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
        <TextView
            android:id="@+id/save_money_transfer_figure_hint"
            android:layout_centerVertical="true"
            android:text="转出金额"
            android:layout_marginLeft="@dimen/save_moeny_marign_left"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/money_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/with_draw_num"
            android:numeric="integer"
            android:layout_centerInParent="true"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/money_asset_text"
            android:hint="请输入整数金额"
            android:textColorHint="@color/money_text_edit"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/delete_edit"
            android:src="@mipmap/icon_delete_edit"
            android:visibility="gone"
            android:layout_marginRight="@dimen/save_moeny_marign_left"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/bg_line"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/save_moeny_marign_left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/icon_money_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/text_tip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:textColor="@color/money_tv_hint_text"
        android:textSize="@dimen/save_moeny_hint_text"
        tools:text = "最快0秒转出"
        />
    </LinearLayout>
    <Button
        android:id="@+id/apply_withdraw"
        android:text="@string/withdraw_money"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/button_text_not_enabled"
        android:layout_marginTop="@dimen/save_moeny_marign_left"
        android:layout_marginRight="@dimen/save_moeny_marign_left"
        android:layout_marginLeft="@dimen/save_moeny_marign_left"
        android:editable="false"
        android:background="@drawable/bg_button_no_enabled"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />
    <TextView
        android:id="@+id/text_tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/money_tv_hint_text"
        android:textSize="@dimen/text_size_12sp"
        android:gravity="center"
        />
    </LinearLayout>
    <include layout="@layout/layout_banner_black"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>