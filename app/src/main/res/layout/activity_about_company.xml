<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/company_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="草根简介"
            android:paddingLeft="20.0dp"
            android:paddingTop="25.0dp"
            android:paddingRight="20.0dp"
            android:paddingBottom="25.0dp"
            />
    </ScrollView>
    <Button
        android:id="@+id/www_cgtz_com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="访问官网www.cgtz.com"
        android:textColor="@color/main_bg"
        android:background="@drawable/bg_about_mine_btn"
        android:layout_margin="6dp"
        />
</LinearLayout>

