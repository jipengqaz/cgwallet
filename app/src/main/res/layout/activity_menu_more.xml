<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_logo_more"
            android:layout_marginTop="30dp"
            android:scaleType="center"
            />
        <TextView
            android:id="@+id/version"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_regist_pwd_introduce"
            android:text="当前版本："
            android:gravity="center"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_safe_center"
            android:orientation="vertical">
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/about_mine"
                android:background="@drawable/bg_safe_center_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height">
                <TextView
                    android:layout_marginLeft="@dimen/menu_more_text_margin_left"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/safe_center_text"
                    android:textColor="@color/code_333333"
                    android:text="关于我们"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/open"
                    android:layout_marginRight="@dimen/more_item_icon_right_marign"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/version_update"
                android:background="@drawable/bg_safe_center_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height">
                <TextView
                    android:layout_marginLeft="@dimen/menu_more_text_margin_left"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/safe_center_text"
                    android:textColor="@color/code_333333"
                    android:text="版本升级"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/open"
                    android:layout_marginRight="@dimen/more_item_icon_right_marign"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/feed_back"
                android:background="@drawable/bg_safe_center_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height">
                <TextView
                    android:layout_marginLeft="@dimen/menu_more_text_margin_left"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/safe_center_text"
                    android:textColor="@color/code_333333"
                    android:text="意见反馈"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/open"
                    android:layout_marginRight="@dimen/more_item_icon_right_marign"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:background="@drawable/bg_safe_center_click"
                android:id="@+id/contact_mine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height">
                <TextView
                    android:layout_marginLeft="@dimen/menu_more_text_margin_left"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/code_333333"
                    android:text="联系我们"/>
                <TextView
                    android:id="@+id/service_mobile"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/more_item_icon_right_marign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ke_fu_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_regist_pwd_introduce"
            android:layout_marginTop="30dp"
            android:gravity="center"
            />
    </LinearLayout>
    <include layout="@layout/layout_banner_black"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
