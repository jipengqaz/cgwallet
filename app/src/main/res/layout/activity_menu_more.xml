<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_safe_center"
            android:orientation="vertical">
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/about_mine"
                android:background="@drawable/bg_safe_center_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height">
                <TextView
                    android:layout_marginLeft="@dimen/more_item_left_marign"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/safe_center_text"
                    android:text="关于我们"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/open"
                    android:layout_marginRight="@dimen/more_item_icon_right_marign"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/feed_back"
                android:background="@drawable/bg_safe_center_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height">
                <TextView
                    android:layout_marginLeft="@dimen/more_item_left_marign"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/safe_center_text"
                    android:text="意见反馈"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/open"
                    android:layout_marginRight="@dimen/more_item_icon_right_marign"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:background="@drawable/bg_safe_center_click"
                android:id="@+id/contact_mine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/more_item_height">
                <TextView
                    android:layout_marginLeft="@dimen/more_item_left_marign"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16sp"
                    android:text="联系我们"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/open"
                    android:layout_marginRight="@dimen/more_item_icon_right_marign"
                    />
            </RelativeLayout>
            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/layout_save_or_draw_money"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/save_or_draw_money_layout_height"/>
</RelativeLayout>
