<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/back_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/invest_start_text1"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp" />
                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/more_item_bg"
                    android:minHeight="@dimen/more_item_height"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_tips1"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="持卡人    "
                        android:layout_marginLeft="20dp" />
                    <TextView
                        android:id="@+id/card_id"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:textColor="@color/invest_start_text1"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginLeft="20dp" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_line"
                    />
                <LinearLayout
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/more_item_bg"
                    android:minHeight="@dimen/more_item_height"
                    android:orientation="horizontal"
                    android:onClick="onClick"
                    >

                    <TextView
                        android:id="@+id/phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_tips1"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="绑定银行"
                        android:layout_marginLeft="20dp" />
                    <ImageView
                        android:id="@+id/bank_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="20dp"
                        />
                    <TextView
                        android:id="@+id/bank_name"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:textColor="@color/invest_start_text1"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginLeft="20dp"
                        android:text="点击选择银行" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/more_item_bg"
                    android:minHeight="@dimen/more_item_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_tips1"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="银行卡号"
                        android:layout_marginLeft="20dp" />

                    <EditText
                        android:id="@+id/with_draw_num"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_tips1"
                        android:inputType="number"
                        android:textSize="@dimen/text_size_14sp"
                        android:hint="正确填写您的银行卡号"
                        android:textColorHint="@color/invest_start_text1"
                        android:layout_marginLeft="20dp"
                        android:maxLength="34"
                        android:background="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="0"
                        android:src="@mipmap/open"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible"
                        />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/bg_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:text="开户行详情"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_tips1"
                        android:textSize="14sp"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="20dp" />


                    <View
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/bg_line"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/more_item_bg"
                        android:minHeight="@dimen/more_item_height"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/main_tips1"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="开户省"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:id="@+id/province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/invest_start_text1"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="点击选择" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0"
                            android:src="@mipmap/open"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/bg_line"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/more_item_bg"
                        android:minHeight="@dimen/more_item_height"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/main_tips1"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="开户市"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:id="@+id/the_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/invest_start_text1"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="点击选择" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/open"
                            android:layout_marginRight="15dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/bg_line"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/more_item_bg"
                        android:minHeight="@dimen/more_item_height"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textColor="@color/main_tips1"
                            android:textSize="@dimen/text_size_14sp"
                            android:text="开户行"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:id="@+id/bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/invest_start_text1"
                            android:textSize="@dimen/text_size_14sp"
                            android:hint="点击选择"
                            android:textColorHint="@color/invest_start_text1"
                            android:background="@null" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="0"
                            android:src="@mipmap/open"
                            android:layout_marginRight="15dp"
                            />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/bg_line"
                        />
                </LinearLayout>


                    <Button
                        android:id="@+id/determine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        android:background="@drawable/bg_button_preed"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
                <include layout="@layout/layout_banner_black"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

    </RelativeLayout>
</ScrollView>
