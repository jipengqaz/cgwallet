<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/parentPanel"
        android:background="@drawable/bg_dialog_layout_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">
                <ImageView
                    android:id="@+id/icon"
                    android:src="@null"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/alertTitle"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/text_size_16sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:id="@+id/titleDivide"
                android:background="#11000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/contentPanel"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message"
                style="?android:attr/textAppearanceMedium"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:textColor="@color/dialog_msg_color"
                android:textIsSelectable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/customPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/btn_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_line"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/button1"
                    android:textColor="@color/invest_start_text1"
                    android:textSize="@dimen/text_size_16sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_weight="1"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/btn_centet_line"
                    android:background="@color/bg_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="@dimen/text_size_16sp"
                    android:visibility="gone"
                    android:id="@+id/button2"
                    android:textColor="@color/remond_btn_bg"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
